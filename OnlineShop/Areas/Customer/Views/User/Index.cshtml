@using OnlineShop.Models;
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i>&nbsp; New User</a>
    </div>

</div>

<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowAmount" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="largeAmount" />
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
        <div class="col-3"></div>
    </div>
</form>

<br />
<div>
    <table class="table table-striped border" id="myTable">

        <thead>
            <tr class="table-info">
                <th>Name</th>
                <th>UserName</th>
                <th>Status</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.UserName </td>

                    @if (item.LockoutEnd > DateTime.Now && item.LockoutEnd != null)
                    {
                        <td>Inactive</td>
                        <td></td>
                        <td style="width: 150px">
                            <div class="btn-group">
                                <a asp-action="Active"
                                   class="btn btn-primary" asp-route-id="@item.Id">
                                    <i class="far fa-edit"></i>
                                </a>


                                <a asp-action="Delete"
                                   class="btn btn-danger" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td>Active</td>

                        <td>
                            <partial name="_PartialView" model="@item.Id" />
                        </td>
                    }


                </tr>
            }

        </tbody>


    </table>
</div>

@section scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }

            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }

            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.success(del);
            }

        });

    </script>

}