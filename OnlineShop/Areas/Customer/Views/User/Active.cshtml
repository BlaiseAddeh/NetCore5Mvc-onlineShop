@model OnlineShop.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">
    User Détails
</h2>

<form asp-action="Active" id="user-form" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3 class="">@ViewBag.message</h3>

        <input type="hidden" asp-for="Id" value="@Model.Id" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Active" />

            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>

    </div>
</form>

<!-- Nous permet d'éviter le rafraichissement de la page -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script type="text/javascript">$(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true
                    },
                    PasswordHash: {
                        required: true
                    },
                    FirstName: {
                        required: true
                    },
                    LastName: {
                        required: true
                    }

                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password",
                    FirstName: "Entrer votre prénom",
                    LastName: "Entrer votre nom"
                }
            });
        })</script>

}