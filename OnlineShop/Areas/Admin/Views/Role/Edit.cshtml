
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">
    Edit Role
</h2>

<form asp-action="Edit" id="role-form" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3 class="">@ViewBag.msg</h3>
        <div class="form-group row">

            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" name="id" value="@ViewBag.id" />
            <div class="col-5">
                <input id="name" name="name" required="required" value="@ViewBag.name" class="form-control" />
            </div>

        </div>


        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>

    </div>
</form>

<!-- Nous permet d'éviter le rafraichissement de la page -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script type="text/javascript">$(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true
                    },
                    PasswordHash: {
                        required: true
                    },
                    FirstName: {
                        required: true
                    },
                    LastName: {
                        required: true
                    }

                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password",
                    FirstName: "Entrer votre prénom",
                    LastName: "Entrer votre nom"
                }
            });
        })</script>

}